<div class="groups-index">
  <% @groups.each do |group| %>
    <div class="group-card">
      <%= link_to group do %>
        <h2><%= group.name %></h2>
        <% if !(group.photo.key.nil?) %>
          <%= cl_image_tag group.photo.key, width: 200, height: 200, crop: :fill %>
        <% else %>
          <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png", width: 200, height: 200 %>
        <% end %>
        <p><%= group.city %></p>
      <% end %>
      </div>
  <% end %>
</div>
